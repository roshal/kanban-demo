
div.task
	background: white
	display: flex
	flex-direction: column
	margin: 8px
	padding: 8px 12px

input.task--name-input
	border: none
	font-weight: bold
	outline: none

input.task--text-input
	border: none
	outline: none

div.task--remove
	float: left

div.task--move
	float: right
	position: relative

ul.task--list
	background: white
	border: 1px solid #f2f2f2
	box-sizing: border-box
	list-style-type: none
	padding: 8px 12px
	position: absolute 8px * * -12px
