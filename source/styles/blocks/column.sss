
div.column
	border-radius: 8px
	margin: 8px
	min-width: 256px

div.column--head
	background: white
	display: flex
	flex-direction: column
	padding: 8px 12px

div.column--body
	background: #f2f2f2
	border: 0 solid #000
	display: flex
	flex-direction: column

div.column--title
	text-align: center

input.column--name-input
	border: none
	outline: none
	text-align: center

div.column--add
	float: left

div.column--sort
	float: right
