
div.column
	background: #f2f2f2
	border-radius: 8px
	margin: 24px 8px 8px
	min-width: 256px

div.column--head
	background: white
	border-top-radius: 8px
	display: flex
	flex-direction: column
	margin: -16px * 8px
	padding: 8px 12px

div.column--title
	text-align: center

div.column--body
	border-bottom-radius: 8px
	min-height: 256px

div.column--add
	float: left

div.column--sort
	float: right

input.column--name-input
	border: none
	outline: none
	text-align: center
