
@import '~/mixins/action'

.task--list
	background: white
	border: 1px solid #000
	box-sizing: border-box
	list-style-type: none
	padding: 8px 12px
	position: absolute 8px * * -12px
	z-index: 1

.task--action--locate
	display: flex
	user-select: none

.task--action--locate--arrow
	white-space: pre

.task--action--locate--text
	@mixin click #000
	cursor: pointer
	white-space: nowrap
