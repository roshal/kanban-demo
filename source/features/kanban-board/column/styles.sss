
@import '~/mixins/action'

.column-wrapper
	margin: 8px
	min-width: 256px

.column--head
	background: #444
	color: #fff
	display: flex
	flex-direction: column
	padding: 8px 12px
	border-top-radius: 8px

.column--body
	border: 0 solid #000
	display: flex
	flex-direction: column

.column--row:first-of-type
	border-top-radius: 8px

.column--row:first-of-type:last-of-type
	border-bottom-radius: 8px

.column--input--name
	background: transparent
	color: #fff
	border: none
	outline: none
	text-align: center
	width: 100%

.column--action--add
	float: left
	user-select: none

.column--action--add--text
	@mixin click #69c
	cursor: pointer

.column--action--sort
	float: right
	user-select: none

.column--action--sort--title
	@mixin click #6c9
	cursor: pointer

.column--action--sort--arrow
	color: #6c9
